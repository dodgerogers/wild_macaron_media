<div class="row">
	<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<h2>Sign in</h2>
		<hr class="colorgraph">

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="form-group">
		  		<%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control input-lg" %>
			</div>

			<div class="form-group">
		    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-lg" %>
			</div>

		  	<% if devise_mapping.rememberable? %>
		    	<div class="button-checkbox">
					<%= f.check_box :remember_me %>&nbsp;<%= f.label :remember_me %>
				</div>
		  	<% end %>
			<hr class="colorgraph">
		  	<div class="form-group">
				<%= f.submit "Sign in", class: "btn btn-lg btn-success btn-block" %>
			</div>
		<% end %>
		<hr>
		<%= render "devise/shared/links" %>
	</div>
</div>		

