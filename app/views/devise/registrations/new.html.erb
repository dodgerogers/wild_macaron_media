<div class="row">
	<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<h2>Sign up</h2>
		<hr class="colorgraph">

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>

		<div class="form-group">
		  	<%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control input-lg"  %>
		</div>

		<div class="form-group">
		    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-lg" %>
		</div>

		<div class="form-group">
		    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control input-lg" %>
		</div>

		<hr class="colorgraph">
		<div class="form-group">
			<%= f.submit "Sign up", class: "btn btn-lg btn-success btn-block" %>
		</div>
	<% end %>
	<hr>
	<%= render "devise/shared/links" %>
	</div>
</div>