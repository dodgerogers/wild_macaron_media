<div class="row" style="margin-top:20px">
	<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<%= form_for Enquiry.new, remote: true do |f| %>
			<% if Enquiry.new.errors.any? %>
				<div id="error_explanation">
		  			<h2><%= pluralize(Enquiry.new.errors.count, "error") %> prohibited this post from being saved:</h2>
		  			<ul>
			  			<% Enquiry.new.errors.full_messages.each do |msg| %>
			    			<li><%= msg %></li>
			  			<% end %>
			  		</ul>
				</div>
			<% end %>
		
			<fieldset>
				<h2>Call us maybe</h2>
				<hr class="colorgraph">
				
				<section id="fields">
					<div class="form-group">
		            	<%= f.text_field :name, placeholder: "Name", class: "form-control input-lg" %>
					</div>
			
					<div class="form-group">
		            	<%= f.text_field :email, placeholder: "email", class: "form-control input-lg" %>
					</div>
			
					<div class="form-group">
		            	<%= f.text_area :message, placeholder: "Message", class: "form-control input-lg" %>
					</div>
				</section>	
			
				<hr class="colorgraph">
			
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12">
						<%= f.submit "Send message", class: "btn btn-lg btn-success btn-block" %>
					</div>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>